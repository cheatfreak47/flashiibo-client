{
  "name": "flashiibo-client",
  "version": "1.0.2",
  "description": "Flashiibo Electron Client",
  "author": "Flashiibo",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win",
    "build:portable": "electron-builder --win portable"
  },
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "productName": "Flashiibo Pro Tools",
	"appId": "com.flashiibo.client",
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
	  "shortcutName": "Flashiibo Pro Tools",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
